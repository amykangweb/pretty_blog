<div ng-controller="menuController as menu">

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
    <div class="navbar-header">
      <a href="#" class="navbar-brand">Pretty Blog</a>
    </div>
      <ul class="nav navbar-nav navbar-right">
        <li><a href ng-click="post()" ng-show="$root.loggedIn">New</a></li>
        <li><a href ng-click="menu()">Menu</a></li>
      </ul>
    </div>
  </nav>

  <!-- User Menu -->
  <div class='overlay-dropdown' ng-show="$root.menuOpen">

    <span class='glyphicon glyphicon-remove' ng-click="close()"></span>
    <div class="spacer"></div>

    <ul class="menu-options">
      <li><a href ng-click="logOut()" ng-show="$root.loggedIn">Sign Out</a>
      </li>
      <li><a href ng-click="editAccount()" ng-show="$root.loggedIn && !$root.account">Edit Account</a>
      </li>
    </ul>

    <!-- User Log In Form -->
    <div class="form-container-menu container" ng-hide="$root.loggedIn">
      <h3>Log In</h3>
      <form ng-submit="$root.session(user)" name="login_form">
        <label for="email">Email</label>
        <input type="text" name="email" ng-model="user.email" class="form-control" />
        <label for="password">Password</label>
        <input type="password" name="password" ng-model="user.password" class="form-control" />
        <p></p>
        <input type="submit" value="Log In" class="btn btn-medium" />
      </form>
    </div>

    <!-- Edit Account Form -->
    <div class="form-container-menu container" ng-show="$root.account">
      <h3>Edit Account</h3>
      <form name="account_form">
        <label for="name">Name</label>
        <input type="text" name="name" ng-model="user.name" class="form-control" />
        <label for="email">Email</label>
        <input type="text" name="email" ng-model="user.email" class="form-control" />
        <label for="password">Password</label>
        <input type="password" name="password" ng-model="user.password" class="form-control" />
        <p></p>
        <input type="submit" value="Update Account" class="btn btn-medium" />
      </form>
    </div>
    <p class="text-center cancel">
      <a href ng-click="editAccount()" ng-show="$root.account">cancel</a>
    </p>

  </div>

  <!-- New Post Form -->
  <div class='overlay-dropdown' ng-show="$root.newPost">

    <span class='glyphicon glyphicon-remove' ng-click="close()"></span>
    <div class="spacer"></div>

    <div class="form-container-menu container">
      <h3>New Post</h3>
      <form ng-submit="$root.createPost(post)" name="post_form">
        <label for="title">Title</label>
        <input type="text" name="title" ng-model="post.title" class="form-control" />
        <label for="content">Content</label>
        <textarea name="content" ng-model="post.content" class="form-control" rows="8"></textarea>
        <p></p>
        <input type="submit" value="Create Post" class="btn btn-medium" />
      </form>
    </div>
  </div>

</div>
